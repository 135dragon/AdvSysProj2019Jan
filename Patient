package doctoroffice;

public class Patient 
{
    private int patientID;
    private String patientName;
    private String visitReason;
    private String diagnosis;
    private String treatment;
    
    public Patient()
    {
        patientID = 0;
        patientName = " ";
        visitReason = " ";
        diagnosis = " ";
        treatment = " ";
    }
    
    public void setID(int ID) { patientID = ID; }
    public void setName(String name) { patientName = name; }
    public void setVisitReason(String visitReason) { this.visitReason = visitReason; }
    public void setDiagnosis(String diagnosis) { this.diagnosis = diagnosis; }
    public void setTreatment(String treatment) { this.treatment = treatment; }
    
    public int getID() { return patientID; }
    public String getName() { return patientName; }
    public String getVisitReason() { return visitReason; }
    public String getDiagnosis() { return diagnosis; }
    public String getTreatment() { return treatment; }
}
